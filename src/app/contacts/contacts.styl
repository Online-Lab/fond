.contact-map
    margin-bottom: 30px
.contact-table
    tr
        td
            padding-bottom 20px
            padding-right: 20px
            vertical-align: top
            font-size 1.4em
            a
                color black
                

.sand-blind
    &.white
        .contact-table
            tr td a
                color black
                
    &.black
        .contact-table
            tr td a
                color white
                
    &.white
        .contact-table
            tr td a
                color #063462
