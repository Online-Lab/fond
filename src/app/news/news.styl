.page-title
    width 100%
    display table
    margin-bottom 20px
    h2
        font-size 25px
        margin 0
        font-weight 100
        display table-cell

.news-list-wrap
    display flex
    flex-flow row wrap
    justify-content space-between
    .news
        width 49%
        display inline-block
        a
            float right
            color #a3a2a0
            text-decoration none
        p
            margin 0
            padding 0 0 7px 15px
            font-size 16px
            line-height 17px

.news
    font-size 14px
    width 100%
    color #303030
    margin-bottom 30px
    figure,
    figcaption
        margin 0
        img
            width 100%
    time,
    article
        padding 7px 15px
        display inline-block
        
    article 
        font-size 16px
        position relative
        z-index 3
        p
            font-size 16px
            padding: 0
            img
                width 100%
            &:first-of-type
                font-size 22px
                font-weight 700
        ul
            display block
            li
                display block
        a
            color #3399cc
    p
        font-size 22px
        line-height 20px
        padding 0 0 7px 15px
    