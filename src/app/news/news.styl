.page-title
    width 100%
    display table
    margin-bottom 20px
    h1
        font-size 2.5em
        margin 0
        font-weight 100
        display table-cell

.news-list-wrap
    display flex
    flex-flow row wrap
    justify-content space-between
    .news
        width 49%
        display inline-block
        a
            float right
            color #a3a2a0
            text-decoration none
            margin-top 1em
        p
            margin 0
            padding 0 0 7px 15px
            font-size 1.6em
            height 2em
            overflow hidden
            line-height 1.3em

.news
    width 100%
    color #303030
    margin-bottom 30px
    figure,
    figcaption
        margin 0
        width 100%
        img
            width 100%
        p
            font-size 1.5em
    time,
    article
        padding 7px 15px
        display inline-block
    time, a
        font-size 1.4em
        
    article 
        // font-size 16px
        position relative
        z-index 3
        p
            font-size 1.6em
            padding: 0
            img
                width 100%
            &:first-of-type
                font-size 2.2em
                font-weight 700
        ul
            display block
            li
                display block
        a
            color #3399cc
    p
        font-size 2.2em
        line-height 1.4em
        padding 0 0 7px 15px
   

dir-pagination-controls
    display table-cell
    text-align right
    vertical-align bottom
.pagination
    display inline-block
    li
        display inline-block
        // margin 0 3px
        a
            color #285258
            text-decoration none
            padding 5px
            border-radius 4px
            font-size 1.4em
            &:hover
                background-color #c7c7c5
        &.active a
            font-weight 700
            text-decoration underline
        &:first-child a,
        &:last-child a
            color #c7c7c5
            padding 5px 10px
            font-weight 700
            border-radius 4px
            &:hover
                background-color #c7c7c5
                color #fff

.img-wrap
    width 100%
    display block
    overflow hidden
    height 150px
    margin-bottom 10px
    


.sand-blind
    .news-list-wrap
        display block
        .news
            width 100%
            display block

            p
                margin 0
                padding 0 0 7px 15px
                font-size 1.6em
                height auto
                overflow visible
                line-height 1.3em