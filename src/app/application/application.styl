.application,
.ask-question
    display block
    .row
        display flex
        flex-flow row wrap
        justify-content space-between
    .inp-wrap
        display inline-block
        width 31%
        margin-bottom 25px
        input, textarea
            resize none
            background-color #f7f6f3
            box-sizing border-box
            padding-left 10px
            display inline-block
            width 100%
            height 37px
            border 2px solid #d0d2d1
            border-radius 6px
            font-size 1.5em
        textarea
            height 66px
        span
            margin-bottom 8px
            display inline-block
            font-size 1.4em
            white-space no-wrap
            &:after
                content "*:"

    .form-desk
        font-size 1.4em
        line-height 1.4em
        color #3b5e63
        padding 20px 0 

    input[type = "submit"]
        width 32%
        border-radius 6px
        background-color #3498db
        text-transform uppercase
        border 0
        color #fff
        padding 10px 0
        font-size 1.4em
        



.sand-blind
    .application,
    .ask-question
        .inp-wrap
            display inline-block
            width 48%
            input, textarea
                border-radius 0
    &.white
        .application,
        .ask-question
            color black
            input, textarea
                background-color white
                border 2px solid black
            input[type = "submit"]
                background-color black
                color white
        .form-desk
            color black
    &.black
        .application,
        .ask-question
            color white
            input, textarea
                background-color black
                border 2px solid white
            input[type = "submit"]
                background-color white
                color black
        .form-desk
            color white
    &.blue
        .application,
        .ask-question
            color #063462
            input, textarea
                background-color #9dd1ff
                border 2px solid #063462
            input[type = "submit"]
                background-color #063462
                color #9dd1ff
        .form-desk
            color #063462