.application
    display block
    .row
        display flex
        flex-flow row no-wrap
        justify-content space-between
    .inp-wrap
        display inline-block
        width 31%
        margin-bottom 15px
        input, textarea
            resize none
            background-color #f7f6f3
            box-sizing border-box
            padding-left 10px
            display inline-block
            width 100%
            height 37px
            border 2px solid #d0d2d1
            border-radius 6px
        textarea
            height 66px
        span
            margin-bottom 8px
            display inline-block
            font-size 14px
            white-space no-wrap
            &:after
                content "*:"
    .form-desk
        font-size 14px
        line-height 14px
        color #3b5e63
        padding 20px 0 
    input[type = "submit"]
        width 32%
        border-radius 6px
        background-color #3498db
        text-transform uppercase
        border 0
        color #fff
        padding 10px 0