// see news.styl

.news article
    p a
        font-size 16px
    strong a
        color #000
    

.share-this-news
    // margin-top -20px
    position relative
    z-index 0
    text-align right
    span
        display inline-block
        margin-top -1px
        padding-right 10px
        vertical-align top

.social
    display inline-block
    margin-right 15px
    a
        display inline-block
        width 16px
        height 16px
    .fb
        background  url(../../assets/images/social.png) 0 center no-repeat
    .gp
        background  url(../../assets/images/social.png) -20px center no-repeat
    .tw
        background  url(../../assets/images/social.png) -40px center no-repeat