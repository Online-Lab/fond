body
    margin 0
    padding 0
.main-content
    display inline-block
    width 74%

.notification
    width 100%
    margin-top 10px
    margin-bottom 10px
    overflow hidden

    h2
        font-size 2em
        text-align center
    p
        font-size 1.6em
        text-align justify
.main-slider
    width 100%
    height 290px
    // margin-bottom 80px
    margin-bottom 0
    position relative
    
    .slick-list,
    .slick-track
        height 100%

    .slide0
        background url(../../assets/images/slide0.png) 0 0 no-repeat

    .slide1
        background url(../../assets/images/slide1.jpg) 0 0 no-repeat
    .slide1 a
        color: #fff
        font-size 16px
        position absolute
        top 250px
        left 30px

    .slide2
        background url(../../assets/images/slide2.jpg) 0 0 no-repeat

.slick-dots
    position absolute
    left 0
    right 0
    margin auto
    bottom 15px
    width 30%
    text-align center
    li
        display inline-block
        margin 0 10px
        &.slick-active
            button:before
                content ""
                width 7px
                height 7px
                background-color #66a3ff
                display inline-block
                border-radius 7px
                position absolute 
                top 0
                right 0
                left 0
                bottom 0
                margin auto

    button
        color transparent
        border-radius 30px
        border 1px solid  #66a3ff
        background-color #2d2f31
        width 20px
        height 20px
        position relative
        
.content-title
    width 100%
    margin-top 45px
    margin-bottom 20px
    border-bottom 1px solid #232323
    display table
    h1, h2
        font-size 3em
        margin 0
        font-weight 100
        text-transform uppercase
        display table-cell
    a
        color #bcbdbd
        vertical-align bottom
        display table-cell
        text-decoration none
        font-size 20px
        text-align right


.partner-list
    display flex
    flex-flow row wrap
    justify-content space-around
    align-items center
    li
        display inline-block
        width 30%
        cursor pointer
        margin-bottom 20px
        span
            display none
    a
        display inline-block
        width 100%
        &:hover
            cursor pointer
        img
            width 100%
            cursor pointer
            



.sand-blind
    .partner-list
        li
            text-align center
            
            span
                display inline-block
                font-size 1.6em
                text-align center
                &:hover
                    text-decoration underline
            img
                display none
            
    &.white
        .partner-list li a span
            color black
    &.black
        .partner-list li a span
            color white
    &.blue
        .partner-list li a span
            color #063462

.ban
    width 100%
    height 243px
    background url(./../assets/images/banner2.jpg)
    position: relative
    .more
        color: #fff
        font-size: 16px
        position: absolute
        top: 200px
        left: 30px
    h1
        margin 0px
        padding 40px 0 0 0
        color white
        text-align center
        font-size 28px
    ul
        text-align center
        display block
        width 100%
        padding-top 45px
        li
            display inline-block
            margin 18px 7px
            padding 0px
            a
                padding 8px 5px 5px
                font-size 24px
                color white
                text-decoration none
                cursor pointer
                background rgba(0, 179, 219, 0.5)
                border-bottom 3px solid rgba(0, 179, 219, 0.5)
                margin 0px
                &:hover
                    background rgba(0, 179, 219, 1)
                    border-bottom 3px solid #fff