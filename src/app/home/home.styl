.main-content
    display inline-block
    width 74%
    
.main-slider
    width 100%
    height 290px
    // margin-bottom 80px
    margin-bottom 0
    position relative
    
    .slick-list,
    .slick-track
        height 100%

    .slide1
        background url(../../assets/images/slide1.jpg) 0 0 no-repeat

    .slide2
        background url(../../assets/images/slide2.jpg) 0 0 no-repeat

    .slick-dots
        position absolute
        left 0
        right 0
        margin auto
        bottom 15px
        width 30%
        text-align center
        li
            display inline-block
            margin 0 10px
        button
            color transparent
            border-radius 30px
            border 1px solid  #66a3ff
            background-color #2d2f31
            width 20px
            height 20px
            position relative
            &:before
                content ""
                width 7px
                height 7px
                background-color #66a3ff
                display inline-block
                border-radius 7px
                position absolute 
                top 0
                right 0
                left 0
                bottom 0
                margin auto
                

.content-title
    width 100%
    margin-top 45px
    border-bottom 1px solid #232323
    display table
    h2
        font-size 30px
        margin 0
        font-weight 100
        text-transform uppercase
        display inline-block
        display table-cell
    a
        color #bcbdbd
        vertical-align bottom
        display table-cell
        float right
        text-decoration none
        font-size 20px
        text-align right