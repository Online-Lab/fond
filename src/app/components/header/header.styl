header
    display block
    border-top 30px solid #4e737c

.logo-wrap
    display inline-block
    margin 10px 0

.header-info-wrap
    width 36%
    float right
    margin-top -25px
    li
        color #4e737c
        margin-bottom 5px
        padding 3px 0
        // font-weight 700
        padding-left 40px


li.for-starblind
    font-size 14px
    text-transform uppercase
    margin-bottom 10px
    padding-left 53px
    background url('../../assets/images/oculus.png') 0 center no-repeat
    a
        color #fff
        text-decoration none
.phone-num
    font-size 24px
    background url(../../assets/images/phone.png) 8px center no-repeat
.address
    background url(../../assets/images/home.png) 3px center no-repeat
.e-mail
    background url(../../assets/images/msg.png) 3px center no-repeat


.hd-2
    width 100%
    background-color #5a9aa8
    border-radius 5px
    // overflow hidden
.main-menu
    transition 0.4s 
    &>li
        display inline-block
        position relative
        &:first-child a
            border-top-left-radius 5px
            border-bottom-left-radius 5px
        .sub-menu-wrap
            display none
        &.active,
        &:hover
            &>a
                border-top 5px solid #2d2f31
                background #4e737c
                box-shadow inset 0 0 5px 0px #2d2f31
                padding 14px 13px 19px 13px
                position relative
                &:after
                    content ""
                    position absolute
                    display inline-block
                    border 10px solid transparent
                    border-top-color #2d2f31
                    width 1px
                    left 0
                    right 0
                    top -5px
                    margin auto
            .sub-menu-wrap
                display inline-block
        &>a
            color #fff
            font-size 14px
            padding 19px 13px
            display inline-block
            text-transform uppercase
            text-decoration none

.sub-menu-wrap
    position absolute
    width 300%
    top 55px
    left 0
    z-index 10

.sub-menu
    margin-top 20px
    padding 15px 0
    border-radius 10px
    background-color #fff
    a
        color #37455e
        text-decoration none
        &:hover
            color #3993ff
    li
        display block
        // margin-bottom 6px
        padding 4px 15px
        position relative
        &:hover .sub-sub-menu-wrap
            display inline-block
    .sub-sub-menu-wrap
        display none
        position absolute
        left 100%
        top 0
        width 100%
        ul
            margin-left 20px
            padding 15px
            border-radius 10px
            background-color #fff


.search-form
    float right
    width 25%
    display inline-block
    height 40px
    border-radius 5px
    margin 8px 
    background #4e737c
    position relative
    overflow hidden
    input
        background transparent
        border 0
        width 100%
        height 100%
        display inline-block
        color #e9e9e9
        box-sizing border-box
        padding-left 10px
    input::-webkit-input-placeholder {
        color #e9e9e9
        font-weight 700
    }

    input:-moz-placeholder { /* Firefox 18- */
        color #e9e9e9
        font-weight 700
    }

    input::-moz-placeholder {  /* Firefox 19+ */
        color #e9e9e9
        font-weight 700
    }

    input:-ms-input-placeholder {
        color #e9e9e9
        font-weight 700
    }
    button
        position absolute
        height 100%
        width 40px
        background #4e737c url(../../assets/images/loop.png) center center no-repeat
        top 0
        right 0
        border 0

.header-links
    display flex
    flex-flow row nowrap
    align-items center
    justify-content space-around
    margin-bottom 20px
    a
        color #74aff5
        text-decoration none
        text-transform uppercase
        font-size 18px
        display inline-block
        padding 20px 0 20px 70px
        position relative
        &:hover
            color #418991
        &:after
            content ""
            position absolute
            left 0
            top 0
            bottom 0
            margin auto
            display inline-block
            width 39px
    .ask-question
        &:after
            height 37px
            background url(../../assets/images/question.png) 0 0 no-repeat
        &:hover:after
            background url(../../assets/images/question.png) 0 bottom no-repeat
    .apply-for-bail
        &:after
            height 49px
            background url(../../assets/images/bail.png) 0 top no-repeat
        &:hover:after
            background url(../../assets/images/bail.png) 0 bottom no-repeat
    .download-docs
        &:after
            height 43px
            background url(../../assets/images/docs.png) 0 top no-repeat
        &:hover:after
            background url(../../assets/images/docs.png) 0 bottom no-repeat
