header
    display block
    border-top 30px solid #4e737c

.logo-wrap
    display inline-block
    margin 10px 0

.header-info-wrap
    width 36%
    float right
    margin-top -25px
    li
        color #4e737c
        margin-bottom 5px
        padding 3px 0
        // font-weight 700
        padding-left 40px
        a
            text-decoration none
            color #4e737c
            &:hover
                text-decoration underline


li.for-starblind
    font-size 1.4em
    text-transform uppercase
    margin-bottom 10px
    padding-left 53px
    background url('../../assets/images/oculus.png') 0 center no-repeat
    a
        color #fff
        text-decoration none
.phone-num
    font-size 2.4em
    background url(../../assets/images/phone.png) 8px center no-repeat

.address
    background url(../../assets/images/home.png) 3px center no-repeat
    font-size 1.4em

.e-mail
    background url(../../assets/images/msg.png) 3px center no-repeat
    font-size 1.4em

.hd-2
    width 100%
    background-color #5a9aa8
    border-radius 5px
    // overflow hidden
.main-menu
    transition 0.4s 
    &>li
        display inline-block
        position relative
        &:first-child a
            border-top-left-radius 5px
            border-bottom-left-radius 5px
        .sub-menu-wrap
            display none
            text-align left
        &.active,
        &:hover
            &>a
                border-top 5px solid #2d2f31
                background #4e737c
                box-shadow inset 0 0 5px 0px #2d2f31
                padding 14px 13px 19px 13px
                position relative
                &:after
                    content ""
                    position absolute
                    display inline-block
                    border 10px solid transparent
                    border-top-color #2d2f31
                    width 1px
                    left 0
                    right 0
                    top -5px
                    margin auto
            .sub-menu-wrap
                display inline-block
        &>a
            color #fff
            font-size 1.4em
            padding 19px 13px
            display inline-block
            text-transform uppercase
            text-decoration none

.sub-menu-wrap
    position absolute
    width 300%
    top 55px
    left 0
    z-index 10

.sub-menu
    margin-top 20px
    padding 15px 0
    border-radius 10px
    background-color #fff
    a
        color #37455e
        text-decoration none
        &:hover
            color #3993ff
    &>li
        display block
        // margin-bottom 6px
        padding 4px 15px
        position relative
        a
            font-size 1.5em
        &:hover .sub-sub-menu-wrap
            display inline-block
    .sub-sub-menu-wrap
        display none
        position absolute
        left 100%
        top 0
        width 100%
        ul
            margin-left 20px
            padding 15px
            border-radius 10px
            background-color #fff


.search-form
    float right
    width 25%
    display inline-block
    height 40px
    border-radius 5px
    margin 8px 
    background #4e737c
    position relative
    overflow hidden
    input
        background transparent
        border 0
        width 100%
        height 100%
        display inline-block
        color black
        box-sizing border-box
        padding-left 10px
        font-size 1.5em
    input::-webkit-input-placeholder {
        color #e9e9e9
        font-weight 700
    }

    input:-moz-placeholder { /* Firefox 18- */
        color #e9e9e9
        font-weight 700
    }

    input::-moz-placeholder {  /* Firefox 19+ */
        color #e9e9e9
        font-weight 700
    }

    input:-ms-input-placeholder {
        color #e9e9e9
        font-weight 700
    }
    button
        position absolute
        height 100%
        width 40px
        background #4e737c url(../../assets/images/loop.png) center center no-repeat
        top 0
        right 0
        border 0

.header-links
    display flex
    flex-flow row nowrap
    align-items center
    justify-content space-around
    margin-bottom 20px
    a
        color #3EAAF7
        text-decoration none
        text-transform uppercase
        font-size 1.8em
        display inline-block
        padding 20px 0 20px 70px
        position relative
        &:hover
            color #418991
        &:after
            content ""
            position absolute
            left 0
            top 0
            bottom 0
            margin auto
            display inline-block
            width 39px
    .ask-question
        &:after
            height 37px
            background url(../../assets/images/question.png) 0 0 no-repeat
        &:hover:after
            background url(../../assets/images/question.png) 0 bottom no-repeat
    .apply-for-bail
        &:after
            height 49px
            background url(../../assets/images/bail.png) 0 top no-repeat
        &:hover:after
            background url(../../assets/images/bail.png) 0 bottom no-repeat
    .download-docs
        &:after
            height 43px
            background url(../../assets/images/docs.png) 0 top no-repeat
        &:hover:after
            background url(../../assets/images/docs.png) 0 bottom no-repeat


.breadcrumb
    display block
    padding 0
    margin-bottom 10px
    font-size 1.4em
    border-bottom 1px solid #232323
    li
        display inline-block
        max-width 200px
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        &:after
            content ">"
            display inline-block
            margin 0 5px
        &:last-child:after
            content ""
    a
        text-decoration underline
        color #232323
        &:hover
            text-decoration none






.sand-blind-ver
    display block

.sand-blind
    .hd-2
        padding-bottom 15px
    .header-info-wrap
        margin-top 0
        width 50%
    .main-menu
        width 100%
        text-align center
    .search-form
        float none
        width 90%
        box-sizing border-box
        margin auto
        font-size 1.5em
        display block
        border-radius 0
        margin-top 10px
        button
            width 80px
            box-sizing border-box
            background-size auto 20px
    .header-links
        a
            color black
            &:after 
                display none
            &:hover
                text-decoration underline
                
    &.col1
        .header-info-wrap li,
        .header-info-wrap li a
            color black
        .hd-2
            background-color black
        header 
            border-color black
        .main-menu
            &>li
                &.active,
                &:hover
                    &>a
                        border-top 5px solid #2d2f31
                        background white
                        box-shadow none
                        color black
                &:first-child a
                    border-radius 0
            .sub-menu
                margin-left -2px
                margin-top 0
                border 2px solid black
                border-radius 0
                padding 0
                li
                    padding: 0
                    a
                        padding 10px
                        display block
                        border 2px solid white
                        &:hover
                            background black
                            color white
        .search-form
            background-color white
            button
                background-color black
                border 2px solid white