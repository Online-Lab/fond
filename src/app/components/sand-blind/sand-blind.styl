.sand-blind-ver
    background-color #aaa
    font-size 18px
    // padding 1em 0
    color black
    a.normal-ver
        color black
        text-decoration none
        padding-left 50px
        background url(../../assets/images/eye.png) 0 0 no-repeat
        background-size auto 90%
        background-color transparent
        background-position left center
        // url("../../assets/images/home.png") 3px center no-repeat
        &:hover
            text-decoration underline
.cell1_3
    display inline-block
    width 32%
    padding 0.7em 1%
    box-sizing border-box
    &:nth-child(2)
        border-right 1px solid grey
        border-left 1px solid grey

.font-size,
.color-theme
    margin-left 10px
    display inline-block
    label
        margin 0 5px
        padding 0
        border 0
        box-sizing border-box
        border 1px solid transparent
    input
        display none
            
.font-size 
    label
        width 20px
        height 25px
        padding 2px 3px
        background-color transparent
        &.small
            font-size 12px
        &.medium
            font-size 15px
        &.large
            font-size 18px
    &>input:checked + label
        border 1px solid black

.color-theme
    label
        font-size 22px
        width 30px
        display inline-block
        text-align center
        height 30px
        &.black
            background-color black
            color white
            // &:hover
            //     border 1px solid white

        &.white
            background-color white
            color black
            // &:hover
            //     border 1px solid black

        &.blue
            background-color #9dd1ff
            color #063462
            // &:hover
            //     border 1px solid #063462
    input:checked + label 
        border-radius 30px
    