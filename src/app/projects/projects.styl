.article-wrap .img-wrap
    width 30%
    height auto
    float left
    margin 0 20px 20px 0
    img
        display block
        width 100%
    
        
.article-wrap
    margin-bottom 40px
    &:after
        content ""
        display block
        height 0
        clear both
    article p
        font-size 1.4em
    

.region-name
    padding-bottom 10px
    font-size 2em
    // border-bottom 2px solid black

.proj-name
    font-size 1.6em






.sand-blind
    .article-wrap .img-wrap
        display none
    &.white
        .projects-list li a
            color black

    &.black
        .projects-list li a
            color black
        

    &.blue
        .projects-list li a
            color #063462
        
