.download-list
    display inline-block
    padding 20px 40px
    li 
        display block
        margin-bottom 10px
        a
            font-size 1.4em
            color #3399cc

.sand-blind
    &.white
        .download-list
            color black
            a
                color black
    &.black
        .download-list
            color white
            a
                color white
    &.blue
        .download-list
            color #063462
            a
                color #063462